<div class = "container">
  <div class="form-horizontal">

    <%= form_for @task do |f| %>
      <div class = "row">
        <div class = "col-sm-10">
          <div class="form-group">
          <%= f.label :description, class: "col-sm-1 control-label" %>
            <div class = "col-sm-6">
              <div class = "col-sm-10">
              <p><%= f.text_field :title, class: "form-control" %></p>
                <% unless @task.new_record? %>
                  <%= f.check_box :complete %>
                  <%= "Complete" %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class = "row">
        <div class = "col-md-3 col-md-offset-1">
          <%= f.submit class: "btn btn-primary"  %>
          <%= link_to "Cancel", tasks_path, class: "btn btn-default" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
