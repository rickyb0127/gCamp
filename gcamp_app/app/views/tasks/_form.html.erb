<div class = "container">
  <%= form_for @task, html: {class:"form-horizontal"} do |f| %>

  <% if @task.errors.any? %>
    <div class = "row">
      <div class = "col-md-offset-2 col-md-6">
        <div class = "alert alert-danger">
          <h2><%= pluralize(@task.errors.count, "error") %> prohibited this article from being saved:</h2>
          <ul>
          <% @task.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

    <div class = "form-group">
      <%= f.label :description, class: "col-md-2 control-label" %>
        <div class="col-md-4">
          <%= f.text_field :title, class: "form-control" %>
        </div>
    </div>

    <div class = "form-group">
      <%= f.label :due_date, class: "col-md-2 control-label" %>
        <div class = "col-md-2">
          <%= f.date_field :due_date, class: "form-control" %>
        </div>
    </div>

    <div class = "form-group">
      <div class="col-md-offset-2 col-md-10">
        <% unless @task.new_record? %>
        <%= f.check_box :complete %>
        <%= "Complete" %>
        <% end %>
      </div>
    </div>

    <div class = "form-group">
      <div class="col-md-offset-2 col-md-10">
        <%= f.submit class: "btn btn-primary"  %>
        <%= link_to "Cancel", tasks_path, class: "btn btn-default" %>
      </div>
    </div>

  <% end %>
</div>
