<div class = "container">
  <%= form_for [@project, @task], html: {class:"form-horizontal"} do |f| %>
  <%= render partial: "shared/errors", locals: {object: @task} %>

    <div class = "form-group">
      <%= f.label :description, class: "col-md-2 control-label" %>
        <div class="col-md-4">
          <%= f.text_field :description, class: "form-control" %>
        </div>
    </div>

    <div class = "form-group">
      <%= f.label :due_date, class: "col-md-2 control-label" %>
        <div class = "col-md-2">
          <%= f.date_field :due_date, class: "form-control" %>
        </div>
    </div>

    <div class = "form-group">
      <div class="col-md-offset-2 col-md-10">
        <% unless @task.new_record? %>
        <%= f.check_box :complete %>
        <%= "Complete" %>
        <% end %>
      </div>
    </div>

    <div class = "form-group">
      <div class="col-md-offset-2 col-md-10">
        <%= f.submit button_name, class: "btn btn-primary"  %>
        <%= link_to "Cancel", project_tasks_path(@project), class: "btn btn-default" %>
      </div>
    </div>

  <% end %>
</div>
