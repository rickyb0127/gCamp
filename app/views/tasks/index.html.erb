<div class = "page-header">
  <h1>Tasks for <%= @project.name %>
    <%= link_to "New Task", new_project_task_path(@project, @task), class: "btn btn-info pull-right" %></h1>
</div>

<ol class="breadcrumb">
  <li><%= link_to "Projects", projects_path %></li>
  <li><%= link_to @project.name, project_path(@project) %></li>
  <li class="active">Tasks</li>
</ol>

  <table class="table">

    <thead>
      <tr>
        <th>Description</th>
        <th>Due On</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @tasks.each do |task| %>
      <% if task.complete %>
        <tr>
          <td><s><%= link_to task.description, project_task_path(task) %></s></td>
            <% if task.due_date %>
              <td><%= task.due_date.strftime("%m/%d/%Y") %></td>
            <% else %>
              <td><%= "TBD" %></td>
            <% end %>
              <td>
                <div class= "text-right">
                  <%= link_to 'Edit', edit_task_path(task), class: "btn btn-info" %>
                  <%= link_to 'Delete', task_path(task), method: :delete, class: "btn btn-danger" %>
                </div>
              </td>
          </tr>

      <% else %>
        <tr>
          <td><%= link_to task.description, project_task_path(@project, task) %></td>
            <% if task.due_date %>
              <td><%= task.due_date.strftime("%m/%d/%Y") %></td>
            <% else %>
              <td><%= "TBD" %></td>
            <% end %>
              <td>
                <div class= "text-right">
                  <%= link_to 'Edit', edit_project_task_path(@project, task), class: "btn btn-info" %>
                  <%= link_to 'Delete', project_task_path(@project, task), method: :delete, class: "btn btn-danger" %>
                </div>
              </td>
          </tr>

      <% end %>
      <% end %>
    </tbody>
  </table>
