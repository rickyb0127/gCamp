<div class = "page-header">
  <h1>Users <%= link_to "New User", new_user_path(@user), class: "btn btn-info pull-right" %></h1>
</div>

  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th></th>
      </tr>
    </thead>

      <tbody>
        <tr>
          <% @users.each do |user| %>
          <td><%= link_to user.full_name, user_path(user) %></td>
          <% if current_user.admin == true %>
            <td><%= mail_to user.email %></td>
            <td><%= link_to "Edit", edit_user_path(user) %></td>

          <% elsif current_user.id == user.id || user.memberships.pluck(:project_id) == current_user.memberships.pluck(:project_id) %>
              <td><%= mail_to user.email %></td>
            <% if current_user.id == user.id %>
              <td><%= link_to "Edit", edit_user_path(user) %></td>
            <% else %>
              <td></td>
            <% end %>
          <% else %>
            <td></td>
            <td></td>
            <% end %>
        </tr>
          <% end %>
      </tbody>

  </table>
