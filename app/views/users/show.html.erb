
<div class = "page-header">
  <% if current_user.admin == true || current_user.id == @user.id %>
    <%= link_to "Edit", edit_user_path, class: "btn btn-info pull-right" %>
  <% end %>
  <h1><%= @user.first_name.capitalize + " " + @user.last_name.capitalize %></h1>
</div>
<br>

<dl class="dl-horizontal">
  <dt>First name</dt>
    <dd><%= @user.first_name.capitalize %></dd>
</dl>
<dl class="dl-horizontal">
  <dt>Last name </dt>
    <dd><%= @user.last_name.capitalize %></dd>
</dl>

<% if current_user.admin == true || current_user.id == @user.id || @user.memberships.pluck(:project_id) == current_user.memberships.pluck(:project_id) %>
  <dl class="dl-horizontal">
    <dt>Email </dt>
      <dd><%= mail_to @user.email %></dd>
  </dl>
<% end %>
