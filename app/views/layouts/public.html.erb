<!DOCTYPE html>
<html>
<head>
  <title>Gcamp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>


<nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <a class="navbar-brand" href="/">gCamp</a>
    </div>

    <ul class="nav navbar-nav navbar-right">
      <% if current_user %>
        <li><%= link_to current_user.full_name, user_path(current_user) %></li>
        <li><%= link_to "Sign Out", sign_out_path %></li>
      <% else %>
        <li><%= link_to "Sign In", sign_in_path %></li>
        <li><%= link_to "Sign Up", sign_up_path %></li>
      <% end %>
    </ul>

  </div>
</nav>


<div class="container">

<% if flash[:error] %>
  <% flash.each do | value | %>
    <div class="alert alert-danger", role="alert">
      <%= flash[:error] %>
    </div>
  <% end %>
  <% end %>

  <% if flash[:notice] %>
  <% flash.each do | value | %>
    <div class="alert alert-success", role="alert">
      <%= flash[:notice] %>
    </div>
  <% end %>
  <% end %>

<%= yield %>

<div class="page-header">
</div>

<footer>
  <div class="row">

    <div class="col-md-6">
      <%= link_to "About", about_path() %>
        |
      <%= link_to "Terms", terms_path() %>
        |
      <%= link_to "FAQ", faq_path() %>

      <% if current_user %>
          |
        <%= link_to "Users", users_path() %>
          |
        <%= link_to "Projects", projects_path() %>
      <% end %>
    </div>

    <div class="col-md-6 text-right">
      <%= link_to image_tag("linked_in.jpg", class: "img_footer"), "https://www.linkedin.com/" %>
      <%= link_to image_tag("git_hub.png", class: "img_footer"), "https://www.github.com/" %>
      <%= link_to image_tag("twitter.png", class: "img_footer"), "https://www.twitter.com/" %>
      <%= link_to image_tag("galvanize.png", class: "img_footer"), "https://students.gschool.it/" %>
    </div>

  </div>
</div>

</body>
</html>
